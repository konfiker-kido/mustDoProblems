#include <iostream>
#include <limits.h>
#include <cmath>
using namespace std;


 int gcdNumber(int a,int b){
     
      int minNum=INT_MAX;
      int maxNum=INT_MIN;
     
      if(a>b)
      {
        maxNum=a;
        minNum=b;
      }else{
           maxNum=b;
           minNum=a;
      }
      
   int gcd=1;
      for(int i=1;i<=maxNum/2;i++){
        if(minNum%i==0 and maxNum%i==0){
             gcd=max(gcd,i);
        }
      }
      return gcd;
  }

int main()
{
    cout<<gcdNumber(15,10);

    return 0;
}
